<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@color/color1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/layout">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="40dp"
            app:cardBackgroundColor="@color/color3"
            app:cardElevation="10dp"
            card_view:cardUseCompatPadding="true">

            <SurfaceView android:id="@+id/preview"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="5dp">
            </SurfaceView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="instructions : "
            android:textColor="@color/color3"
            android:textAllCaps="true"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_margin="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="35dp"
            android:paddingEnd="10dp"
            android:textStyle="bold"
            android:textColor="@color/color2"
            android:text=" Place your finger gently on the back of the camera overlapping the flashlight .\n\n DO NOT PRESS , It might break the blood flow . \n\n Try to keep the finger still as possible . \n\n Press START to start monitoring ."/>

        <Button
            android:id="@+id/startButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="60dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:background="@drawable/round_color2_card"
            android:textColor="@color/color1"
            android:text="START"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/color2"
            android:text="Monitor Heart Rate "/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/bmpRes"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/color4"
                android:text="0"
                android:textStyle="bold"
                android:textSize="130dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textColor="@color/color4"
                android:layout_gravity="center"
                android:text="bpm"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>